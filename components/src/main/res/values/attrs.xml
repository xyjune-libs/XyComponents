<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="StickyLayout">
        <attr name="Sticky_id" format="reference" />
        <attr name="Sticky_height" format="dimension" />
    </declare-styleable>

    <!-- items -->
    <declare-styleable name="BaseItem">
        <attr name="xy_icon" format="reference" />
        <attr name="xy_icon_width" format="reference" />
        <attr name="xy_icon_height" format="reference" />
        <attr name="xy_text" format="string" />
        <attr name="xy_textColor" format="color" />
        <attr name="xy_textSize" format="dimension" />
        <attr name="xy_paddingStart" format="dimension" />
        <attr name="xy_paddingEnd" format="dimension" />
        <attr name="xy_margin" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SubtextItem">
        <attr name="xy_subtext" format="string" />
        <attr name="xy_subtextSize" format="dimension" />
        <attr name="xy_subtextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="ClickItem">
        <attr name="xy_clickIcon" format="reference" />
        <attr name="xy_clickIcon_width" format="dimension" />
        <attr name="xy_clickIcon_height" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SwitchItem">
        <attr name="xy_checked" format="boolean" />
    </declare-styleable>

    <!-- groups -->
    <declare-styleable name="ItemGroup">
        <attr name="xy_divider" format="reference" />
        <attr name="xy_divider_paddingLeft" format="dimension" />
    </declare-styleable>

    <!-- action bar-->
    <declare-styleable name="BaseActionBar">
        <attr name="titleText" format="string" />
        <attr name="titleSize" format="dimension" />
        <attr name="titleColor" format="color" />
        <attr name="titleGravity" format="enum">
            <enum name="center" value="1" />
            <enum name="left" value="2" />
        </attr>
        <attr name="titleStatusBarInclude" format="boolean" />
    </declare-styleable>

    <attr name="titleMode">
        <flag name="left_text" value="0x02" />
        <flag name="left_icon" value="0x20" />
        <flag name="right_text" value="0x04" />
        <flag name="right_icon" value="0x40" />
        <flag name="text_text" value="0x06" />
        <flag name="icon_icon" value="0x60" />
        <flag name="text_icon" value="0x42" />
        <flag name="icon_text" value="0x24" />
    </attr>

    <declare-styleable name="DDActionBar">
        <attr name="titleMode" />
        <attr name="leftTextSize" format="dimension" />
        <attr name="rightTextSize" format="dimension" />
        <attr name="leftIconWidth" format="dimension" />
        <attr name="rightIconWidth" format="dimension" />
        <attr name="leftIconHeight" format="dimension" />
        <attr name="rightIconHeight" format="dimension" />
        <attr name="leftTextColor" format="color" />
        <attr name="rightTextColor" format="color" />
        <attr name="leftIconTint" format="color" />
        <attr name="rightIconTint" format="color" />
        <attr name="leftIcon" format="reference" />
        <attr name="rightIcon" format="reference" />
        <attr name="rightText" format="string" />
        <attr name="leftText" format="string" />
    </declare-styleable>

    <declare-styleable name="CircularRing">
        <attr name="bgColor" format="color" />
        <attr name="barColor" format="color" />
    </declare-styleable>
</resources>

